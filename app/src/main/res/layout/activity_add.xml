<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/test_shirt"
            android:id="@+id/imageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/colourBTN"/>
    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/saveBTN" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_btn" android:foreground="@drawable/save_icon"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/typeBTN" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/saveBTN" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/colourBTN"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:id="@+id/colourBTN" app:layout_constraintStart_toEndOf="@+id/typeBTN"
            app:layout_constraintBottom_toBottomOf="@+id/typeBTN" app:layout_constraintTop_toTopOf="@+id/typeBTN"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/seasonBTN"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:id="@+id/seasonBTN" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/colourBTN" app:layout_constraintBottom_toBottomOf="@+id/colourBTN"
            app:layout_constraintStart_toEndOf="@+id/colourBTN" app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/cameraBTN" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/colourBTN"/>
</android.support.constraint.ConstraintLayout>