<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_height="400dp" app:srcCompat="@drawable/no_image_icon"
                android:id="@+id/capturedPictureIV"
                android:layout_width="400dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/TitleTXT"
                app:layout_constraintTop_toBottomOf="@+id/capturedPictureIV" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp" android:textSize="30sp"
                android:textColor="@color/colorPrimaryText"/>
        <Button
                android:layout_width="80dp"
                android:layout_height="80dp" android:id="@+id/likeBTN"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:foreground="@drawable/like_icon" android:background="@drawable/rounded_btn"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/dislikeBTN"
                app:layout_constraintTop_toBottomOf="@+id/TitleTXT" android:layout_marginTop="8dp"/>
        <Button
                android:layout_width="80dp"
                android:layout_height="80dp" android:id="@+id/dislikeBTN"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_btn" android:foreground="@drawable/dislike_icon"
                app:layout_constraintStart_toEndOf="@+id/likeBTN" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toBottomOf="@+id/TitleTXT" android:layout_marginTop="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>