<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuickSearchActivity">

    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/searchBTN" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_btn" android:foreground="@drawable/search_icon"/>

    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/colourSPN"
            app:layout_constraintBottom_toTopOf="@+id/searchBTN"
            app:layout_constraintStart_toEndOf="@+id/typeSPN" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/seasonSPN"
    />
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/typeSPN"
            app:layout_constraintTop_toTopOf="@+id/colourSPN" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="@+id/colourSPN"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/colourSPN"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/seasonSPN" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/colourSPN"
            app:layout_constraintBottom_toBottomOf="@+id/colourSPN" app:layout_constraintStart_toEndOf="@+id/colourSPN"
            app:layout_constraintHorizontal_bias="0.5"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="@+id/colourSPN" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" android:id="@+id/pictureRV"/>

</androidx.constraintlayout.widget.ConstraintLayout>