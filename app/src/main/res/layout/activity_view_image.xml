<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewImageActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/no_image_icon"
            android:id="@+id/pictureIV" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/cameraBTN"/>
    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/cameraBTN"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/rounded_btn"
            android:foreground="@drawable/camera_icon"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toEndOf="@+id/editBTN" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/saveBTN"/>
    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/editBTN"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:background="@drawable/rounded_btn" app:layout_constraintStart_toEndOf="@+id/fragLayout"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/cameraBTN"
            android:foreground="@drawable/filter_icon"/>
    <Button
            android:layout_width="80dp"
            android:layout_height="80dp" android:id="@+id/colourBTN" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/editBTN" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:background="@color/colorPrimaryText"/>
    <Button
            android:layout_width="80dp"
            android:layout_height="80dp" android:id="@+id/saveBTN"
            app:layout_constraintStart_toEndOf="@+id/cameraBTN"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:foreground="@drawable/save_icon" android:background="@drawable/rounded_btn"/>
    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="350dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/fragLayout" android:elevation="2dp">

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>