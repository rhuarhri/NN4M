<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ItemDescriptionActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/test_jacket"
            android:id="@+id/clothingPicture" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/searchPictureSB"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/priceTXT"
            app:layout_constraintEnd_toStartOf="@+id/redudedPriceTXT" android:layout_marginEnd="8dp"
            android:id="@+id/descriptionScrV">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="Dark blue leather jacket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/descriptionTXT" android:textSize="18sp"
                    android:textColor="@color/colorPrimaryText"/>
        </LinearLayout>
    </ScrollView>
    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/cartBTN" android:background="@drawable/rounded_btn"
            android:foreground="@drawable/cart_icon" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="now 9.99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/redudedPriceTXT"
            app:layout_constraintBottom_toTopOf="@+id/cartBTN" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textColor="@color/colorPrimaryText" android:textSize="30sp"/>
    <TextView
            android:text="10.00"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/priceTXT" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/redudedPriceTXT"
            app:layout_constraintStart_toStartOf="@+id/redudedPriceTXT" android:layout_marginStart="8dp"
            android:textSize="30sp" android:textColor="@color/colorPrimaryText"/>
    <TextView
            android:text="Top man jacket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/nameTXT" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/priceTXT" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/descriptionScrV"
            android:textSize="30sp" android:textColor="@color/colorPrimaryText"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/searchPictureSB" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/nameTXT"/>
</androidx.constraintlayout.widget.ConstraintLayout>