<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WelcomeActivity">

    <TextView
            android:text="@string/app_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/TitleTXT" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="30sp"
            android:textColor="@color/colorPrimaryText" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/shopBTN"
            android:textAlignment="center"/>
    <TextView
            android:text="Fashion at your finger tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commentTXT" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/TitleTXT" app:layout_constraintStart_toStartOf="@+id/TitleTXT"
            app:layout_constraintEnd_toEndOf="@+id/TitleTXT" android:textColor="@color/colorPrimaryText"/>
    <TextView
            android:text="Developed by Rhuarhri Cordon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/companyTXT"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Search"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/quickSearchBTN" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/companyTXT" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/shopBTN" android:textColor="@color/colorPrimaryText"
            android:background="@drawable/rounded_btn" android:textSize="24sp"/>
    <Button
            android:text="Shop"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/shopBTN" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/companyTXT"
            app:layout_constraintStart_toEndOf="@+id/quickSearchBTN"
            app:layout_constraintHorizontal_bias="0.5" android:textColor="@color/colorPrimaryText"
            android:textSize="24sp" android:background="@drawable/rounded_btn"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/no_image_icon"
            android:id="@+id/promotionIV" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/TitleTXT"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/quickSearchBTN"/>
</androidx.constraintlayout.widget.ConstraintLayout>