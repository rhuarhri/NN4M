<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WelcomeActivity">

    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TitleTXT" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent" android:textSize="30sp"
            android:textColor="@color/colorPrimaryText"/>
    <TextView
            android:text="Fashion at your finger tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commentTXT" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/TitleTXT" app:layout_constraintStart_toStartOf="@+id/TitleTXT"
            app:layout_constraintEnd_toEndOf="@+id/TitleTXT" android:textColor="@color/colorPrimaryText"/>
    <TextView
            android:text="Developed by Rhuarhri Cordon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/companyTXT"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>